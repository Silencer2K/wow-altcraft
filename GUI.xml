<?xml version="1.0" encoding="UTF-8"?>
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Frame name="AltCraftFrame" toplevel="true" parent="UIParent" movable="true" enableMouse="true" hidden="true">
        <Size x="768" y="447" />
        <Anchors>
            <Anchor point="TOPLEFT" x="0" y="-104" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentPortraitTexture" parentKey="Portrait">
                    <Size x="58" y="58" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="8" y="-7" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture name="$parentTopLeft" file="Interface\Addons\AltCraft\assets\frame\tl" parentKey="TopLeft">
                    <Size x="256" y="256" />
                    <Anchors>
                        <Anchor point="TOPLEFT" />
                    </Anchors>
                </Texture>
                <Texture name="$parentTop" file="Interface\Addons\AltCraft\assets\frame\t">
                    <Size x="256" y="256" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentTopLeft" relativePoint="TOPRIGHT" x="0" y="0" />
                    </Anchors>
                </Texture>
                <Texture name="$parentTopRight" file="Interface\Addons\AltCraft\assets\frame\tr">
                    <Size x="256" y="256" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentTop" relativePoint="TOPRIGHT" x="0" y="0" />
                    </Anchors>
                </Texture>
                <Texture name="$parentBotLeft" file="Interface\Addons\AltCraft\assets\frame\bl" parentKey="BottomLeft">
                    <Size x="256" y="256" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="-256" />
                    </Anchors>
                </Texture>
                <Texture name="$parentBot" file="Interface\Addons\AltCraft\assets\frame\b">
                    <Size x="256" y="256" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentBotLeft" relativePoint="TOPRIGHT" x="0" y="0" />
                    </Anchors>
                </Texture>
                <Texture name="$parentBotRight" file="Interface\Addons\AltCraft\assets\frame\br">
                    <Size x="256" y="256" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentBot" relativePoint="TOPRIGHT" x="0" y="0" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="3" y="-8" />
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="$parentTab1" inherits="CharacterFrameTabButtonTemplate" id="1" parentKey="TabChars">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="27" y="13" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick><![CDATA[
                        self:GetParent():OnSelectTab(1)
                    ]]></OnClick>
                </Scripts>
            </Button>
            <Button name="$parentTab2" inherits="CharacterFrameTabButtonTemplate" id="2" parentKey="TabReagents">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentTab1" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-15" y="0" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick><![CDATA[
                        self:GetParent():OnSelectTab(2)
                    ]]></OnClick>
                </Scripts>
            </Button>
